.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #ffffff;
}

.chat-area {
  flex: 1;
  overflow-y: auto;
  padding: 20rpx;
  background-color: #f7f7f8;
}

.message-item {
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
}

.ai-message {
  align-items: flex-start;
}

.user-message {
  align-items: flex-end;
}

.message-content {
  max-width: 80%;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
}

.ai-message .message-content {
  background-color: #ffffff;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.user-message .message-content {
  background-color: #007AFF;
  color: #ffffff;
}

.input-area {
  padding: 20rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #e6e6e6;
  display: flex;
  align-items: center;
  position: relative;
}

.message-input {
  flex: 1;
  height: 72rpx;
  background: #f7f7f8;
  border-radius: 36rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.send-button {
  width: 120rpx;
  height: 72rpx;
  border-radius: 36rpx;
  background: #007AFF;
  color: #ffffff;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
  margin: 0;
}

.send-button::after {
  border: none;
}

.send-button[loading] {
  opacity: 0.7;
} 